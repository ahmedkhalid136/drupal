{% extends "layouts/page.html.twig" %}

{% block content %}
<main class="page_content">
    <section class="register_section section_space_lg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col col-lg-5">
                    <h1 class="register_heading text-center">Account Login</h1>
                    <p class="register_heading_description text-center">
                        Please enter your User/Email & Password
                    </p>
                    {{ form_start(form) }}
                    <div class="register_form signup_login_form">
                        <div class="form_item">
                            {{ form_widget(form.name, {'attr': {'placeholder': 'Username or Email'}}) }}
                        </div>
                        <div class="form_item">
                            {{ form_widget(form.pass, {'attr': {'placeholder': '**********'}}) }}
                        </div>
                        <div class="remenber_forget row mb-3 align-items-center justify-content-between">
                            <div class="col col-6">
                                <div class="checkbox_item mb-0">
                                    {{ form_widget(form.remember_me) }}
                                    <label for="checkbox_remenber">Remember me</label>
                                </div>
                            </div>
                            <div class="col col-6">
                                <div class="forget_password text-end">
                                    <a href="{{ path('user.pass') }}">Forgot Password?</a>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn_dark mb-5">
                            <span>
                                <small>Login Now</small>
                                <small>Login Now</small>
                            </span>
                        </button>
                        <p class="mb-0 text-center">
                            Don't have an account? <a href="{{ path('user.register') }}">Register Here</a>
                        </p>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
